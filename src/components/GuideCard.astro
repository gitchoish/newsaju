---
interface Props {
  title: string;
  description: string;
  href: string;
  tags?: string[];
  readingTime?: string;
}

const { title, description, href, tags = [], readingTime } = Astro.props;
---

<a href={href} class="card card-glow group block h-full guide-card" data-tags={tags.join(',')}>
  <article class="relative z-10 h-full flex flex-col">
    <!-- Tags -->
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-3">
        {tags.slice(0, 2).map((tag) => (
          <span class="text-xs font-medium px-2 py-1 rounded-full bg-primary-500/10 text-primary-400">
            {tag}
          </span>
        ))}
      </div>
    )}

    <!-- Title -->
    <h3 class="font-heading text-lg font-semibold text-dark-50 mb-2 group-hover:text-primary-400 transition-colors duration-300">
      {title}
    </h3>

    <!-- Description -->
    <p class="text-dark-400 text-sm flex-1 line-clamp-3">
      {description}
    </p>

    <!-- Footer -->
    <div class="mt-4 pt-4 border-t border-dark-700/50 flex items-center justify-between">
      {readingTime && (
        <span class="text-xs text-dark-500">{readingTime}</span>
      )}
      <span class="text-primary-400 text-sm font-medium flex items-center gap-1 group-hover:gap-2 transition-all duration-300">
        Read more
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </span>
    </div>
  </article>
</a>
