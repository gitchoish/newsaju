---
import BaseLayout from '../../layouts/BaseLayout.astro';
import GuideCard from '../../components/GuideCard.astro';
import { getCollection } from 'astro:content';

const allGuides = await getCollection('guides');
const sortedGuides = allGuides.sort((a, b) => 
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get unique tags
const allTags = [...new Set(allGuides.flatMap(guide => guide.data.tags))];
---

<BaseLayout 
  title="Saju Guides - Learn About Korean Four Pillars"
  description="Comprehensive guides on Korean Four Pillars (Saju). Learn about the Five Elements, Heavenly Stems, Earthly Branches, and how to interpret your birth chart."
>
  <section class="py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-heading font-bold text-dark-50 mb-6">
          Saju <span class="gradient-text">Guides</span>
        </h1>
        <p class="text-xl text-dark-400 max-w-2xl mx-auto">
          Everything you need to understand Korean Four Pillars, from basics to advanced concepts
        </p>
      </div>

      <!-- Tags Filter -->
      <div class="flex flex-wrap justify-center gap-2 mb-12" id="filter-bar">
        <button 
          class="filter-btn active text-sm px-4 py-2 rounded-full bg-primary-500/20 text-primary-400 border border-primary-500/30 hover:border-primary-500/50 transition-all"
          data-filter="all"
        >
          All Guides ({allGuides.length})
        </button>
        {allTags.map(tag => (
          <button 
            class="filter-btn text-sm px-4 py-2 rounded-full bg-dark-800/50 text-dark-400 border border-dark-700 hover:border-dark-600 transition-all hover:text-dark-200"
            data-filter={tag}
          >
            {tag}
          </button>
        ))}
      </div>

      <!-- Guides Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" id="guides-grid">
        {sortedGuides.map((guide) => (
          <GuideCard
            title={guide.data.title}
            description={guide.data.description}
            href={`/guides/${guide.slug}`}
            tags={guide.data.tags}
            readingTime={guide.data.readingTime}
          />
        ))}
      </div>

      <div class="text-center py-12 hidden" id="no-guides">
        <p class="text-dark-400">No guides found for this tag.</p>
      </div>
    </div>
  </section>

  <style>
    .filter-btn.active {
      @apply bg-primary-500/20 text-primary-400 border-primary-500/30;
    }
  </style>

  <script>
    const filterButtons = document.querySelectorAll('.filter-btn');
    const guideCards = document.querySelectorAll('.guide-card');
    const noGuides = document.getElementById('no-guides');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const filter = button.getAttribute('data-filter');
        
        // Update active state
        filterButtons.forEach(btn => {
          btn.classList.remove('active', 'bg-primary-500/20', 'text-primary-400', 'border-primary-500/30');
          btn.classList.add('bg-dark-800/50', 'text-dark-400', 'border-dark-700');
        });
        
        button.classList.add('active', 'bg-primary-500/20', 'text-primary-400', 'border-primary-500/30');
        button.classList.remove('bg-dark-800/50', 'text-dark-400', 'border-dark-700');

        let visibleCount = 0;
        guideCards.forEach(card => {
          const tags = card.getAttribute('data-tags')?.split(',') || [];
          if (filter === 'all' || tags.includes(filter)) {
            (card as HTMLElement).style.display = 'block';
            visibleCount++;
          } else {
            (card as HTMLElement).style.display = 'none';
          }
        });

        if (visibleCount === 0) {
          noGuides?.classList.remove('hidden');
        } else {
          noGuides?.classList.add('hidden');
        }
      });
    });
  </script>
</BaseLayout>
